<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)" />
  <arg name="trajectory" default="" />
  <arg name="loop" default="false" />

  <group ns="$(arg uav_name)">

    <node name="trajectory_loader" pkg="mrs_multimaster" type="multimaster_trajectories_loader" args="--load" output="screen" >

      <param name="use_yaw" value="true" />
      <param name="fly_now" value="false" />
      <param name="loop" value="$(arg loop)" />

      <rosparam file="$(find realsense_d435)/config/multimaster_trajectory_$(arg trajectory).yaml" />
      <rosparam file="$(find realsense_d435)/config/trajectory_handler.yaml" />
      <param name="current_working_directory" type="string" value="$(find realsense_d435)" />	

    </node>

  </group>

</launch>

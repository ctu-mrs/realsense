<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)" />

  <group ns="$(arg uav_name)">

    <node name="trajectory_loader" pkg="mrs_multimaster" type="multimaster_trajectories_loader" args="--load" output="screen" >

      <param name="use_yaw" value="true" />
      <param name="fly_now" value="false" />
      <param name="loop" value="false" />

      <rosparam file="$(find lidar_localization)/config/multimaster_trajectory.yaml" />
      <rosparam file="$(find lidar_localization)/config/trajectory_handler.yaml" />
      <param name="current_working_directory" type="string" value="$(find lidar_localization)" />	

    </node>

  </group>

</launch>

<launch>
  <arg name="uav_name"           default="$(optenv UAV_NAME uav)"/>
  <arg name="fcu_frame" default="fcu_$(arg uav_name)"/>
  <arg name="fcu_frame_origin" default="fcu_$(arg uav_name)_origin"/>
  <arg name="sensor_frame" default="camera_link"/>
  <arg name="sensor_frame_origin" default="$(arg sensor_frame)_origin"/>
  <arg name="world_origin" default="local_origin"/>

  <node pkg="tf2_ros" type="static_transform_publisher" name="camera_origin2fcu_origin" args="0.27 0.0 -0.05 0.0 0.0 0.0 $(arg fcu_frame_origin) $(arg sensor_frame_origin)" />
</launch>

<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)" />

  <arg name="rosbag_dir" default="uav_detect" />

  <group ns="$(arg uav_name)">

    <!-- !!! MAKE SURE THAT CAMERA TOPICS ARE SET PROPERLY !!! -->
    <node pkg="rosbag" type="record" name="rosbag_record" args="-o /home/$(optenv USER mrs)/bag_files/$(arg rosbag_dir)/ -a -x .*/theora.*|.*/compressed.*|.*/rs_d435/color/image_raw|.*/rs_d435/depth.*|.*/rs_d435/aligned_depth_to_infra.*|.*/rs_d435/color_rectify_color/.*|.*/rs_d435/realsense2_camera_manager/.*"/>   

  </group>
</launch>
